      "Beast Killer": {attack:0, hp:500, magic:0, defense:20, tr:"Canavar Katili"},

      "Courage Mask": {attack:0, hp:700, magic:0, defense:0, tr:"Cesaret Maskesi"},
      "Shadow Mask": {attack:0, hp:700, magic:0, defense:0, tr:"Gölge Maskesi"},
      "Awe Mask": {attack:0, hp:700, magic:0, defense:0, tr:"Hayranlık Maskesi"}
    };

    const kategoriler = {
      physical:["Blade of Despair","Endless Battle","Malefic Roar","Hunter Strike","Sea Halberd","Windtalker","Scarlet Phantom","Berserker's Fury","Great Dragon Spear"],
      magic:["Blood Wings","Holy Crystal","Genius Wand","Divine Glaive","Glowing Wand","Clock of Destiny","Lightning Truncheon","Ice Queen Wand","Enchanted Talisman"],
      defense:["Immortality","Athena's Shield","Dominance Ice","Oracle","Antique Cuirass","Brute Force Breastplate","Cursed Helmet","Twilight Armor"],
      movement:["Warrior Boots","Tough Boots","Arcane Boots","Magic Shoes","Swift Boots"],
      jungle:["Raptor Machete","Star Shard","Beast Killer"],
      roam:["Courage Mask","Shadow Mask","Awe Mask"]
    };

    let secilenler = [];

    function olusturButonlar() {
      for(let kategori in kategoriler){
        const div = document.getElementById(kategori);
        div.innerHTML = "";
        kategoriler[kategori].forEach(item => {
          let btn = document.createElement("div");
          btn.className = "item";
          btn.textContent = dil=="tr"? items[item].tr : item;
          btn.onclick = () => {
            if(secilenler.length<6){
              secilenler.push(item);
              btn.style.background="#006600";
            }else{
              alert("❌ En fazla 6 item seçebilirsin!");
            }
          };
          div.appendChild(btn);
        });
      }
    }

    function degistirDil(){
      dil = dil=="tr"?"en":"tr";
      document.getElementById("langBtn").textContent = dil=="tr"?"İngilizceye Geç":"Türkçeye Geç";
      olusturButonlar();
    }

    function hesapla(){
      let stats={attack:0,hp:0,magic:0,defense:0};
      secilenler.forEach(i=>{
        stats.attack += items[i].attack;
        stats.hp += items[i].hp;
        stats.magic += items[i].magic;
        stats.defense += items[i].defense;
      });
      document.getElementById("result").innerHTML = `
        <h2>${dil=="tr"?"Build Sonuçları":"Build Results"}</h2>
        <p>${dil=="tr"?"Seçilen itemler":"Selected items"}: ${secilenler.map(i=>dil=="tr"?items[i].tr:i).join(", ")}</p>
        <p>Attack: ${stats.attack}</p>
        <p>HP: ${stats.hp}</p>
        <p>Magic Power: ${stats.magic}</p>
        <p>Defense: ${stats.defense}</p>
      `;
    }

    olusturButonlar();
  </script>
