      "Immortality": {attack:0, hp:800, magic:0, defense:40, tr:"Ölümsüzlük"},
      "Athena's Shield": {attack:0, hp:900, magic:0, defense:62, tr:"Athena'nın Kalkanı"},
      "Dominance Ice": {attack:0, hp:500, magic:0, defense:70, tr:"Hüküm Buz"},
