  <footer>EMİR MERT KILINÇ YAPIMIDIR</footer>

  <script>
    let dil = "tr"; // tr = Türkçe, en = İngilizce
    const items = {
      "Blade of Despair": {attack:160, hp:0, magic:0, defense:0, tr:"Umutsuzluğun Kılıcı"},
